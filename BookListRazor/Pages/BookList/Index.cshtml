@page
@model BookListRazor.Pages.BookList.IndexModel


<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Razor Pages table</h2>

    </div>
    <div class="col-3">
        <a asp-page="Upsert" class="btn btn-info form-control" >Create a book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table id="DT_Razor" class="table table-striped border table-bordered">
                    <tr class="table-secondary col-12">
                        <th style="width:25%">
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th style="width:25%">
                            @*Html.DisplayNameFor(m=> m.Books.FirstOrDefault().Author)*@
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th style="width:25%">
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th style="width:25%">

                        </th>
                    </tr>
                    @foreach (var item in Model.Books)
                    {
                <tr class="col-12">
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ISBN)
                    </td>
                    <td class="text-center">
                        <a asp-page="Upsert" asp-route-id="@item.Id" style="cursor:pointer;width:70px;" class="btn btn-success btn-sm text-white">Edit</a>&nbsp
                        <button asp-page-handler="Delete" asp-route-id="@item.Id" style="cursor:pointer;width:70px;" onclick="return confirm('are you sure?')" class="btn btn-danger btn-sm">Delete</button>
                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <p> No books available.</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align:left">
        <hr/>
        <span class="h3 text-info">Razor pages with Controller API data table</span>
        <hr/><br/>
    </div>
    <div class="col-12 border" p-3>
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{ 
    <script src="~/js/bookList.js"></script>>
}
